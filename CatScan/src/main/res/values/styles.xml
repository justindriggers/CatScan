<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/default_primary</item>
        <item name="colorPrimaryDark">@color/default_primary_dark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ToolBarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="VerboseTheme" parent="AppTheme">
        <item name="colorPrimary">@color/verbose</item>
        <item name="colorPrimaryDark">@color/verbose_dark</item>
        <!--<item name="colorAccent">@color/accent</item>-->
    </style>

    <style name="DebugTheme" parent="AppTheme">
        <item name="colorPrimary">@color/debug</item>
        <item name="colorPrimaryDark">@color/debug_dark</item>
        <!--<item name="colorAccent">@color/accent</item>-->
    </style>

    <style name="InfoTheme" parent="AppTheme">
        <item name="colorPrimary">@color/info</item>
        <item name="colorPrimaryDark">@color/info_dark</item>
        <!--<item name="colorAccent">@color/accent</item>-->
    </style>

    <style name="WarnTheme" parent="AppTheme">
        <item name="colorPrimary">@color/warn</item>
        <item name="colorPrimaryDark">@color/warn_dark</item>
        <!--<item name="colorAccent">@color/accent</item>-->
    </style>

    <style name="ErrorTheme" parent="AppTheme">
        <item name="colorPrimary">@color/error</item>
        <item name="colorPrimaryDark">@color/error_dark</item>
        <!--<item name="colorAccent">@color/accent</item>-->
    </style>

    <style name="FatalTheme" parent="AppTheme">
        <item name="colorPrimary">@color/fatal</item>
        <item name="colorPrimaryDark">@color/fatal_dark</item>
        <!--<item name="colorAccent">@color/accent</item>-->
    </style>

</resources>
